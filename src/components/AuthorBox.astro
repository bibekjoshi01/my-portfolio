---
import { getAuthorProfile } from '@data/authors';

interface Props {
  author: string;
}

const { author } = Astro.props;
const profile = getAuthorProfile(author);
---

<section class="reading-surface flex flex-col gap-5 p-6 sm:flex-row sm:items-center sm:gap-6">
  <img
    src={profile.avatar}
    alt={profile.name}
    width="96"
    height="96"
    class="h-20 w-20 rounded-full border border-slate-200 object-cover dark:border-slate-700"
    loading="lazy"
  />

  <div class="space-y-2">
    <p class="text-sm font-semibold uppercase tracking-[0.12em] text-slate-500 dark:text-slate-400">Author</p>
    <h3 class="text-xl font-semibold text-slate-900 dark:text-slate-100">{profile.name}</h3>
    <p class="text-sm font-medium text-slate-600 dark:text-slate-300">{profile.role}</p>
    <p class="text-base leading-7 text-slate-600 dark:text-slate-300">{profile.bio}</p>

    {profile.social.length > 0 && (
      <div class="flex flex-wrap gap-3 pt-1">
        {profile.social.map((social) => (
          <a
            href={social.url}
            target="_blank"
            rel="noopener noreferrer"
            class="text-sm font-medium text-sky-700 hover:text-sky-500 dark:text-sky-300 dark:hover:text-sky-200"
          >
            {social.label}
          </a>
        ))}
      </div>
    )}
  </div>
</section>
