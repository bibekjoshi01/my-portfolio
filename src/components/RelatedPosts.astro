---
import type { BlogEntry } from '@utils/blog';
import { getPostReadingTime } from '@utils/blog';

interface Props {
  posts: BlogEntry[];
}

const { posts } = Astro.props;

const formatDate = (date: Date) =>
  new Intl.DateTimeFormat('en-US', {
    month: 'short',
    day: 'numeric',
    year: 'numeric',
  }).format(date);
---

{
  posts.length > 0 && (
    <section class="space-y-5">
      <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-100">Related Posts</h2>
      <div class="grid gap-4">
        {posts.map((post) => (
          <article class="reading-surface space-y-2 p-5">
            <p class="text-sm text-slate-500 dark:text-slate-400">
              {formatDate(post.data.publishedDate)} â€¢ {getPostReadingTime(post)}
            </p>
            <h3 class="text-xl font-semibold text-slate-900 dark:text-slate-100">
              <a href={`/blog/${post.slug}/`} class="hover:text-sky-700 dark:hover:text-sky-300">
                {post.data.title}
              </a>
            </h3>
            <p class="text-base text-slate-600 dark:text-slate-300">{post.data.description}</p>
          </article>
        ))}
      </div>
    </section>
  )
}
